name: fastai_example

docker_env: 
  image: seebaktec/mlflow-fastai
  volumes: ["$WORKSPACE/fastai_example/data/mnist_tiny:$WORKSPACE/fastai_example/data/mnist_tiny"] 
  environment: ["WORKSPACE"] 

entry_points:
  main:
    parameters:
      lr: {type: float, default: 0.01}
      epochs: {type: int, default: 5}
    command: |
        python ./fastai_example/train.py \
            --lr {lr} \
            --epochs {epochs}
